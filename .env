# VoiceTranslate Environment Variables

# Translation API Configuration
# Using Lingva Translate API - open source translation service
VITE_LINGVA_API_URL=https://lingva.ml/api/v1

# Speech Recognition Configuration
# These are browser APIs and don't require keys
VITE_SPEECH_RECOGNITION_ENABLED=true
VITE_SPEECH_SYNTHESIS_ENABLED=true

# Application Configuration
VITE_APP_NAME=VoiceTranslate
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true